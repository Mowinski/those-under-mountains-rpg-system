<ol class="skills-list">
	<li class="skill flexrow skills-header">
		<div class="skill-name">{{localize "Name"}}</div>
		<div class="skill-formula">{{localize "Roll Formula"}}</div>
		<div class="skill-controls">
			<a class="skill-control skill-create" title="{{localize 'DOCUMENT.Create' type="Skill"}}" data-type="skill">
				<i class="fas fa-plus"></i>
				{{localize "DOCUMENT.New" type="skill"}}
			</a>
		</div>
	</li>

	{{#each system.skills as |skill|}}
		<li class="skill flexrow" data-skill-id="{{skill._id}}">
			<div class="skill-name">
				<a class="rollable" data-roll-type="skill">
					{{skill.name}}
				</a>
			</div>
			<div class="item-formula item-prop">{{skill.description}}</div>
			<div class="item-controls">
				<a class="item-control skill-edit" title="{{localize 'DOCUMENT.Update' type="Skill"}}">
					<i class="fas fa-edit"></i>
				</a>
				<a class="item-control skill-delete" title="{{localize 'DOCUMENT.Delete' type="Skill"}}">
					<i class="fas fa-trash"></i>
				</a>
			</div>
		</li>
	{{/each}}
</ol>