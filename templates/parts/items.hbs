<section class="items">
    <h2>{{localize "Resources"}}</h2>
    <table>
        <thead>
        <tr>
            <th></th>
            <th>{{localize "Name"}}</th>
            <th>{{localize "Quantity"}}</th>
            <th>{{localize "AssetValue"}}</th>
            <th style="text-align: right;">
                <a class="item-control resource-create" title="{{localize 'DOCUMENT.Create' type="Resource"}}" data-type="resource">
                    <i class="fas fa-plus"></i>
                    {{localize "DOCUMENT.New" type="resource"}}
                </a>
            </th>
        </tr>
        </thead>
        <tbody>
        {{#each resources as |item id|}}
            <tr data-item-id="{{item._id}}">
                <td>
                    <img src="{{item.img}}" title="{{item.name}}" width="24" height="24" />
                </td>
                <td>
                    <a class="item-control item-edit" title="{{localize 'DOCUMENT.Update' type="Item"}}">
                        {{item.name}}
                    </a>
                </td>
                <td>{{item.system.quantity}}</td>
                <td>{{localize "sheet.item.value" value=item.assetValue}}</td>
                <td style="text-align: right;">
                    <a class="item-control item-edit" title="{{localize 'DOCUMENT.Update' type="Item"}}">
                        <i class="fas fa-edit"></i>
                    </a>
                    <a class="item-control item-delete" title="{{localize 'DOCUMENT.Delete' type="Item"}}">
                        <i class="fas fa-trash"></i>
                    </a>
                </td>
            </tr>
        {{/each}}
        </tbody>
        <tfoot>
            <tr>
                <td colspan="4"></td>
                <td style="text-align: right">{{localize "sheet.item.total" value=totalResourcesValue}}</td>
            </tr>
        </tfoot>
    </table>

	<h2>{{localize "Weapons and armors"}}</h2>
	<table>
		<thead>
			<tr>
				<th></th>
				<th>{{localize "Name"}}</th>
				<th>{{localize "Formula"}}</th>
